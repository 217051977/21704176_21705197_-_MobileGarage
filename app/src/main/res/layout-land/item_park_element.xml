<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipelayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:baselineAligned="false"
    android:layout_marginVertical="5dp"
    app:dragEdge="right"
    app:mode="same_level"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goTo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#d2691e"
            android:gravity="center"
            android:text="@string/item_park_go_to"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:layout_marginVertical="5dp"
        >

        <LinearLayout
            android:id="@+id/park"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="3"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text_park_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/item_park_name"
                    />

                <TextView
                    android:id="@+id/text_availability"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/item_park_availability"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/text_park_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:text="@string/item_park_type"
                        android:gravity="center"
                        />

                    <ImageButton
                        android:id="@+id/add_favorite"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="2"
                >

                <TextView
                    android:id="@+id/text_park_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/item_park_address"
                    />

                <TextView
                    android:id="@+id/text_distance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/item_park_distance"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_primary_black"
            />

    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
