<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="@color/transparent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        >

        <TextView
            android:id="@+id/filter_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_orders_title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/filter_name_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_clear_black_24dp"
                    app:backgroundTint="@color/transparent"
                    />

                <TextView
                    android:id="@+id/filter_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/filter_orders_name"
                    android:gravity="center"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/filter_last_update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_clear_black_24dp"
                    app:backgroundTint="@color/transparent"
                    />

                <TextView
                    android:id="@+id/filter_last_update"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/filter_orders_last_update"
                    android:gravity="center"
                    android:textSize="18sp"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/filter_distance_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_clear_black_24dp"
                    app:backgroundTint="@color/transparent"
                    />

                <TextView
                    android:id="@+id/filter_distance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/filter_orders_distance"
                    android:gravity="center"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/filter_type_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_clear_black_24dp"
                    app:backgroundTint="@color/transparent"
                    />

                <TextView
                    android:id="@+id/filter_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/filter_orders_type"
                    android:gravity="center"
                    android:textSize="18sp"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/filter_checkable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_checkable_title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />

        <CheckBox
            android:id="@+id/filter_checkable_availability"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:text="@string/filter_checkable_availability"
            android:textSize="18sp"
            android:gravity="end|center"
            android:layout_marginBottom="10dp"
            />

        <CheckBox
            android:id="@+id/filter_checkable_accessible_to_disable_people"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            android:text="@string/filter_checkable_accessible_to_disable_people"
            android:textSize="18sp"
            android:gravity="end|center"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:id="@+id/filter_distance_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_distance_title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />

        <SeekBar
            android:id="@+id/filter_distance_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5000"
            />

        <TextView
            android:id="@+id/filter_distance_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/filter_distance_value"
            android:textSize="18sp"
            />

    </LinearLayout>

</ScrollView>