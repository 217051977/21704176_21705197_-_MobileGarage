<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvvm.view.fragment.LogInFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="50dp"
            android:src="@drawable/large_mobile_garage"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="6"
            android:weightSum="10"
            >

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="60dp"
                android:background="@drawable/shape_text_input"
                android:layout_marginTop="40dp"
                android:hint="@string/user_name_hint"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginHorizontal="60dp"
                android:background="@drawable/shape_text_input"
                android:layout_marginTop="35dp"
                android:hint="@string/password_hint"
                android:gravity="center"
                android:inputType="textPassword"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="80dp"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="30sp"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/shape_rounded_button_log_in"
                    android:text="@string/button_text_log_in"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="30sp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_button_register"
                    android:text="@string/button_text_register"
                    />
                
            </LinearLayout>
                


        </LinearLayout>

    </LinearLayout>

</FrameLayout>